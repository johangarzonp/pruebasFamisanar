<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/textlistacategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTA DE CATEGORIAS"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textaviso1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presione el BotÃ³n para acceder a la lista de apps"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/buttonlistarapps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:text="Listado de Apps"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:layout_marginTop="100dp"
        android:onClick="MostrarApps"
        />
    <LinearLayout
        android:id="@+id/layoutconexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/textestadoconexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESTADO DE LA CONEXION: "
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/estadoconexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EN LINEA"
        android:textColor="#04B404"
        android:layout_gravity="center"/>
</LinearLayout>

</LinearLayout>